private void outputWFieldKeyReleased(java.awt.event.KeyEvent evt) {                                         
        if (!relationLock) {
            return;
        }

        float ratio, inW, inH, outW, outH;

        try {
            inW = Float.parseFloat(inputWField.getText());
            inH = Float.parseFloat(inputHField.getText());

            if (inW == 0 || inH == 0) {
                return;
            }
            ratio = inW / inH;

            outW = Float.parseFloat(outputWField.getText());
            if (outW == 0) {
                return;
            }
            outH = outW / ratio;
            outputHField.setText(df.format(outH));
        } catch (NumberFormatException exc) {

        }
    }                                        

    private void outputHFieldKeyReleased(java.awt.event.KeyEvent evt) {                                         
        if (!relationLock) {
            return;
        }

        float ratio, inW, inH, outW, outH;

        try {
            inW = Float.parseFloat(inputWField.getText());
            inH = Float.parseFloat(inputHField.getText());

            if (inW == 0 || inH == 0) {
                return;
            }
            ratio = inW / inH;

            outH = Float.parseFloat(outputHField.getText());
            if (outH == 0) {
                return;
            }
            outW = outH * ratio;
            outputWField.setText(df.format(outW));
        } catch (NumberFormatException exc) {

        }
    }                                        

    private void inputFieldsKeyReleased(java.awt.event.KeyEvent evt) {                                        
        if (!manualRadio.isSelected() || !relationLock) {
            return;
        }

        float ratio, inW, inH, outW, outH;

        try {
            inW = Float.parseFloat(inputWField.getText());
            inH = Float.parseFloat(inputHField.getText());

            if (inW == 0 || inH == 0) {
                return;
            }
            ratio = inW / inH;

            outW = Float.parseFloat(outputWField.getText());
            if (outW == 0) {
                return;
            }
            outH = outW / ratio;
            outputHField.setText(df.format(outH));
        } catch (NumberFormatException exc) {

        }
    }